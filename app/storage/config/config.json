{
  "playerprofile": {
    "view": "playerprofile",
    "capabilities": "public",
    "layout": {
      "type": "profile",
      "values": {
        "surname_lang": "_surname",
        "age_lang": {
          "default": "_age"
        },
        "name_lang": {
          "default": "_name"
        },
        "name_value": {
          "query": {
            "model": "user",
            "attribute" : "name",
            "function": "select",
            "inputs" : ["id"]
          }
        },
        "person_icon": "people-big"
      },
      "children": {
        "profile-data": {
          "type": "vertical-layout",
          "values": {
            "title_lang": "_profile_data"
          },
          "children": {
            "0": {
              "type": "description",
              "multiple" : true,
              "values": {
                "description_title": "_lang",
                "description_content": {
                  "query": {
                    "model": "user",
                    "attribute" : "name",
                    "function": "select",
                    "inputs" : [{
                      "name" : "id",
                      "op" : "<>",
                      "value" : "me"
                    }],
                    "build" : {
                      "orderBy" : "'name', 'asc'",
                      "take" : 2
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
