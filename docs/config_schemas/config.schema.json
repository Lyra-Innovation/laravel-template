{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://lyrainnovation.com/config.json",
    "title": "Config",
    "description": "describes the configuration of a web page",
    "type": "object",
    "definitions": {

      "viewComponent": {
        "type": "object",
        "properties": {
          "type" : {
            "description": "type of the componenet, the name should type should exist in the fronted",
            "type" : "string"
          },
          "values" : {
            "description": "",
            "$ref": "#/definitions/values"
          },
          "children" : {
            "type" : "object",
            "patternProperties": {
              "^.*$": {
                "description": "children componenet rended by the parent in it's key position",
                "$ref": "#/definitions/viewComponent"
              }
            },
            "additionalProperties": false
          }
        },
        "required": ["type"]
      },

      "query": {
        "type": "object",
        "properties": {
          "model" : {
            "type" : "string",
            "description": ""
          },
          "attribute" : {
            "type" : "string",
            "description": ""
          },
          "function" : {
            "type" : "string"
          },
          "inputs" : {
            "type" : "array",
            "items": {
              "oneOf": [
                {
                  "type" : "string"
                }, 
                {
                  "type": "object", 
                  "properties": {
                    "name" : {
                      "type" : "string"
                    },
                    "op" : {
                      "type" : "string"
                    }
                  }
                }
              ]
            }
          },
          "build" : {
            "type" : "object",
            "patternProperties": {
              "^.*$": {
                "description": "",
                "type" : ["string", "integer"]
              }
            },
            "additionalProperties": false
          }
        },
        "required": ["function", "attribute"]
      },

      "values" : {
        "type" : "object",
        "patternProperties": {
          "^.*$": {
            "oneOf": [
              {
                "type" : ["string", "integer"]
              }, 
              {
                "type": "object", 
                "properties": {
                  "default" : {
                    "type" : ["string", "integer"]
                  },
                  "query" : {
                    "description": "",
                    "$ref": "#/definitions/query"
                  }
                }
              }
            ]
            
          }
        },
        "additionalProperties": false
      }

    },
    "patternProperties": {
      "^.*$": {
        "properties": {
          "view": {
            "description": "name of the view, it's just an identifier",
            "type": "string"
          },
          "layout" : {
            "description" : "root viewComponent of the page",
            "$ref": "#/definitions/viewComponent"
          }
        },
        "required": [ "view", "layout"]
      }
    }
  }